<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D8E3"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="Enter the co-efficients of your equation:"
            android:textColor="@color/purple_700"
            android:textSize="28sp"
            android:textStyle="bold" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#FFD8D8E3"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#FFD8D8E3"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <EditText
                android:id="@+id/a"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/purple_700"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:hint="a"
                android:inputType="numberSigned|numberDecimal|number"
                android:textColor="#0645FF"
                android:textColorHint="#8C8CFF"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="XÂ²"
                android:textColor="@color/purple_700"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/b"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/purple_700"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:hint="b"
                android:inputType="numberSigned|numberDecimal|number"
                android:textColor="#0645FF"
                android:textColorHint="#8C8CFF"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="X"
                android:textColor="@color/purple_700"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/c"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/purple_700"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:hint="c"
                android:inputType="numberSigned|numberDecimal|number"
                android:padding="5dp"
                android:textColor="#0645FF"
                android:textColorHint="#8C8CFF"
                android:textSize="24sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:elevation="50dp"
        app:cardBackgroundColor="@color/purple_700"
        app:cardCornerRadius="20dp"
        app:cardMaxElevation="100dp">

        <Button
            android:id="@+id/ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/purple_700"
            android:elevation="50dp"
            android:fontFamily="@font/poppins_bold"
            android:text="ANSWER"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:elevation="15dp"
        app:cardBackgroundColor="#FFD8D8E3"
        app:cardCornerRadius="15dp">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/purple_700"
            android:textSize="50dp">

            <TextView
                android:id="@+id/solution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins_medium"
                android:gravity="start|top"
                android:textSize="18sp" />

        </ScrollView>


    </androidx.cardview.widget.CardView>

</LinearLayout>